# Required
TELEGRAM_BOT_TOKEN=
XUI_BASE_URL=https://host:port/panel-path
XUI_USERNAME=admin
XUI_PASSWORD=admin
XUI_SERVER_HOST=host
WEBHOOK_BASE_URL=https://your-domain.example

# SSL / webhook
SSL_ENABLED=true
SSL_DOMAIN=your-domain.example
SSL_INCLUDE_WWW=true
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.example/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.example/privkey.pem
LETSENCRYPT_EMAIL=admin@your-domain.example
LETSENCRYPT_WEBROOT=/var/www/certbot

# Recommended / optional
ADMIN_TELEGRAM_ID=8477244366
WEBHOOK_PATH=telegram
WEBHOOK_LISTEN=0.0.0.0
WEBHOOK_PORT=8443
WEBHOOK_SECRET_TOKEN=
XUI_SUBSCRIPTION_PORT=2096
MAX_PLAN_DAYS=365
MAX_PLAN_GB=2000
MAX_BULK_COUNT=100
LOW_BALANCE_THRESHOLD=
ADMIN_WEB_TOKEN=set-a-secret-token
ADMIN_WEB_PORT=8080
# BOT_DB_PATH will be forced to /data/bot.db in docker-compose
